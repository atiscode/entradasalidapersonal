@using System.Web.Optimization
@using WebHelpers.Mvc5.Enum
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            @(string.IsNullOrEmpty(ViewBag.Title) ? "Entrada y Salida de Personal" : "Entrada y Salida de Personal - " + ViewBag.Title)
        }

    </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="icon" href="~/Content/img/favicon2.ico">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    @Styles.Render("~/Bundles/css")

    @*@RenderSection("styles", required: false)*@
    <link href="~/Content/css/bootstrap-tagsinput.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css?family=Libre+Franklin&display=swap" rel="stylesheet">
    @*<link href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap" rel="stylesheet">*@
    @*<link href="https://fonts.googleapis.com/css?family=Baloo+2&display=swap" rel="stylesheet">*@
    @*<link href="https://fonts.googleapis.com/css?family=PT+Sans+Narrow&display=swap" rel="stylesheet">*@

    <link href="~/Content/css/skins/skin-recursos-humanos.css" rel="stylesheet" />
    <link href="~/Content/css/Aplicacion.css" rel="stylesheet" />

    <link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet">

    <link href="~/Content/css/Loader.css" rel="stylesheet" />
    <link href="~/Content/css/toastr.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">

    <link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet" type="text/css" />

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

    <![endif]-->
</head>
<body class="hold-transition fixed skin-recursos-humanos sidebar-mini">

    @*<div class="pace pace-inactive">
        <div class="pace-progress" data-progress-text="100%" data-progress="99" style="transform: translate3d(100%, 0px, 0px);">
            <div class="pace-progress-inner"></div>
        </div>
        <div class="pace-activity"></div>
    </div>*@

    <div class="wrapper">
        @Html.Partial("_Header")
        @Html.Partial("_Sidebar")

        <div class="content-wrapper">
            <section class="content-header">
                @*<h1>
                        @ViewBag.Title
                        <small>@ViewBag.Description</small>
                    </h1>*@
            </section>

            <section class="content">
                <div id="preloader"></div>
                @RenderBody()
            </section>
        </div>

        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">
                @*Guipuzcoa E14-46 y Mallorca, Edificio QPH, Quito - Ecuador*@
                <strong>Versión 1.0.0</strong>
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://www.google.com.ec" target="_blank">Quito Publishing House</a>.</strong> Todos los derechos reservados.
        </footer>

        @Html.Partial("_ControlSidebar")
    </div>

    <script src="~/Content/js/AccionesAjax.js"></script>

    @Html.Partial("_Exportar")
    @Html.Partial("_Parcial")
    @Html.Partial("_SubParcial")
    @*  @Html.Partial("_Menu")*@

    <script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
    <script src="@EnumHandler.HandlerUrl"></script>

    @Scripts.Render("~/Bundles/js")
    <script src="~/Content/js/toastr.min.js"></script>
    <script src="~/Content/js/animsition.min.js"></script>

    <!--Script de funcionalidades del Grid -->
    <script src="~/Scripts/MvcGrid/mvc-grid.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>

    <!--Efectos de las transiciones cuando se cargan las paginas, existen redireccionamientos y se carga data-->
    <script src="~/Content/js/EfectosTransicionesCargas.js"></script>

    <!--Traducción de textos del grid -->
    <script src="~/Content/js/TranslateMVCGrid.js"></script>

    <script src="~/Content/js/FuncionesBasicasGrid.js"></script>

    <!--Initialize MVC.Grid instances after rendering grid html -->
    <script>
        [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
            new MvcGrid(element);
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>

    <script>
        var imgBuildLoading = '<img src="@Url.Content("~/Content/img/loader-grid.gif")" />'

        //Desactivar caché GET REQUESTS
        //$.ajaxSetup({ cache: false });

        $(window).on('load', function () {
            $("#preloader").fadeOut();
            $("#preloader").delay(400).fadeOut("slow");
        });

    </script>

    <script src="~/Scripts/bootstrap-tagsinput.min.js"></script>

    <script src="~/Scripts/jquery.tabletojson.min.js"></script>
    
    <script src="~/Content/js/FuncionesGenericas.js"></script>

    @RenderSection("ViewSpecificJavascript", required: false)

</body>
</html>