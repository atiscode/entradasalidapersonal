@using System.Web.Optimization
@using WebHelpers.Mvc5.Enum
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            @ViewBag.Title@: -
        }
        QPH
    </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    @Styles.Render("~/Bundles/css")

    <link rel="icon" href="~/Content/img/favicon2.ico">

    <link href="https://fonts.googleapis.com/css?family=Libre+Franklin&display=swap" rel="stylesheet">

    <link href="~/Content/css/Aplicacion.css" rel="stylesheet" />

    <link href="~/Content/css/Loader.css" rel="stylesheet" />
    <link href="~/Content/css/toastr.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition fixed skin-asertec sidebar-mini">
    <div class="box wrapper" style="margin-bottom: 0px !important;">
        <!-- Loading (remove the following to stop the loading)-->
        <div class="overlay" id="seccion-cargando-loading" style="display: none;">
            <i style="color: #F4901F;" class="fa fa-spinner fa-spin"></i>
        </div>
        <div id="preloader"></div>
        @RenderBody()
    </div>

    <script src="~/Content/js/AccionesAjax.js"></script>

    <script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
    <script src="@EnumHandler.HandlerUrl"></script>

    @Scripts.Render("~/Bundles/js_login")

    <script src="~/Content/js/toastr.min.js"></script>
    <script src="~/Content/js/animsition.min.js"></script>

    <!--Efectos de las transiciones cuando se cargan las paginas, existen redireccionamientos y se carga data-->
    <script src="~/Content/js/EfectosTransicionesCargas.js"></script>

    <!-- Optional: include a polyfill for ES6 Promises for IE11 -->
    @*<script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>*@

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

    <script>
        var imgBuildLoading = '<img src=""../../Content/img/loader-grid.gif"" />'
        //Desactivar caché GET REQUESTS
        //$.ajaxSetup({ cache: false });

        $(window).on('load', function () {
            $("#preloader").fadeOut();
            $("#preloader").delay(400).fadeOut("slow");
        });
    </script>

    <script src="~/Content/js/FuncionesGenericas.js"></script>

    @RenderSection("ViewSpecificJavascript", required: false)

</body>
</html>