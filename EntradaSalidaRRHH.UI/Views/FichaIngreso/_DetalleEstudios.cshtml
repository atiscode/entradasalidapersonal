@{
    List<DetalleEstudios> detalles = (List<DetalleEstudios>)ViewBag.ListadoDetalleEstudios;
}
<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 id="texto-informacion-principal" class="box-title">@ViewBag.TituloPanelDetalle <span class="requerido"> *</span></h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="row fila-seccion">
                <div class="col-md-12">
                    <table class="table table-responsive" id="tbl-Estudios">
                        <thead>
                            <tr>
                                <th data-override="IDDetalleEstudios">ID</th>
                                <th data-override="TipoEstudio">Tipo Estudio</th>

                                <th data-override="Institucion">
                                    Institución
                                    <a title="Agregar nueva institución al listado." style="cursor: pointer" onclick="AgregarSubCatalogo('INSTITUCION-ESTUDIO-01')"><i class="fa fa-plus"></i></a>
                                </th>
                                <th data-override="Titulo">
                                    Título
                                    <a title="Agregar nuevo título al listado." style="cursor: pointer" onclick="AgregarSubCatalogo('TITULO-ESTUDIO-01')"><i class="fa fa-plus"></i></a>
                                </th>
                                <th data-override="AnioFinalizacion">Año Finalización</th>
                                <th data-override="Finalizado" name="col-finalizado">Finalizado</th>
                                <th data-override="Pais">País</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateEstudios">
                                <td><input type="text" class="form-control idObjeto" value="0" name="IDDetalleEstudios[]" /></td>

                                <td>
                                    @Html.DropDownList("TipoEstudio", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("TIPO-ESTUDIO-01"), Etiquetas.TituloComboVacio, new { @class = "form-control seleccion js-example-basic-single" })
                                </td>


                                <td>
                                    @Html.DropDownList("Institucion", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("INSTITUCION-ESTUDIO-01"), Etiquetas.TituloComboVacio, new { @class = "form-control seleccion js-example-basic-single", style="max-width:400px;" })
                                </td>

                                <td>
                                    @Html.DropDownList("Titulo", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("TITULO-ESTUDIO-01"), Etiquetas.TituloComboVacio, new { @class = "form-control seleccion seleccion js-example-basic-single", style = "max-width:400px;" })
                                </td>

                                <td>
                                    @Html.DropDownList("AnioFinalizacion", (List<SelectListItem>)CatalogoDAL.ObtenerCatalogoAños(), Etiquetas.TituloComboVacio, new { @class = "form-control seleccion seleccion js-example-basic-single" })
                                </td>
                                <td name="col-finalizado">
                                    @Html.DropDownList("Finalizado", (List<SelectListItem>)CatalogoDAL.ObtenerCatalogoEstado(), Etiquetas.TituloComboVacio, new { @class = "form-control seleccion seleccion js-example-basic-single" })
                                </td>
                                <td>
                                    @Html.DropDownList("PaisEstudios", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("PAI-01"), Etiquetas.TituloComboVacio, new { @class = "form-control js-example-basic-single seleccion seleccion-ciudad estudios-pais" })
                                </td>

                                <td id="accion">
                                    <button type="button" class="agregarFila btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button>
                                </td>
                            </tr>
                            @foreach (var item in detalles)
                            {
                        <tr id="templateEstudios-@item.TipoEstudio">
                            <td>
                                <input type="text" class="form-control" value="@item.IDDetalleEstudios" name="IDDetalleActaCondicionesGenerales[]" />
                            </td>
                            <td>
                                @Html.DropDownList("TipoEstudio[]", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("TIPO-ESTUDIO-01", (item.TipoEstudio ?? 0).ToString()), new { @class = "form-control js-example-basic-single" })
                            </td>

                            <td>
                                @Html.DropDownList("Institucion[]", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("INSTITUCION-ESTUDIO-01", (item.TipoEstudio ?? 0).ToString()), new { @class = "form-control js-example-basic-single", style = "max-width:400px;" })
                            </td>
                            <td>
                                @Html.DropDownList("Titulo[]", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("TITULO-ESTUDIO-01", (item.Titulo ?? 0).ToString()), new { @class = "form-control js-example-basic-single", style = "max-width:400px;" })
                            </td>
                            <td>
                                @Html.DropDownList("AnioFinalizacion[]", (List<SelectListItem>)CatalogoDAL.ObtenerCatalogoAños((item.AnioFinalizacion ?? 0).ToString()), new { @class = "form-control js-example-basic-single" })

                            </td>
                            <td name="col-finalizado">
                                @Html.DropDownList("Finalizado[]", (List<SelectListItem>)CatalogoDAL.ObtenerCatalogoEstado(item.Finalizado.ToString()), new { @class = "form-control seleccion seleccion js-example-basic-single" })
                            </td>
                            <td>
                                @Html.DropDownList("Pais[]", (List<SelectListItem>)CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("PAI-01", (item.Pais ?? 0).ToString()), new { @class = "form-control estudios-pais js-example-basic-single" })
                            </td>
                            <td id="accion"><button type="button" onclick="eliminarFila(this)" id="eliminar-@item.TipoEstudio" class="eliminarFila btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                        </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>